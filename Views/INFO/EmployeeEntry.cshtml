@model Employeeportal.Models.employee

<p style="font-size:36px;text-align:center; font-family:'Times New Roman', serif;" class=" m-4">DATA ENTRY</p>

<form method="post">


    <div class="mt-3">
        <label class="form-label">NAME</label>
        <input type="text" class="form-control" asp-for="employeeNAME" />
    </div>
    <div class="mt-3">
        <label class="form-label">DATE OF BIRTH</label>
        <input type="date" class="form-control" asp-for="dob" />
    </div>
    <div class="mt-3">
        <label class="form-label">EMAIL</label>
        <input type="email" class="form-control" asp-for="email" />
    </div>
    <div class="mt-3">
        <label class="form-label">PHONE</label>
        <input type="tel" class="form-control" asp-for="phone" />
    </div>
    <div class="mt-3">
        <label class="form-label">ADDRESS</label>
        <input type="text" class="form-control" asp-for="address" />
    </div>
    <div class="mt-3">
        <label class="form-label">DESIGNATION</label>
        <label>
            <select id="designation" asp-for="designationID" asp-items="ViewBag.DesignationSelectList">
            </select>
        </label>

    </div>
    <div class="mt-3">
        <label class="form-label">DEPARTMENT</label>
        <label>
            <select id="department" asp-for="departmentID" asp-items="ViewBag.DepartmentSelectList">
            </select>
        </label>

    </div>


    <div class="mt-3">
        <button type="Submit" class="btn btn-primary">Save</button>
    </div>


</form>