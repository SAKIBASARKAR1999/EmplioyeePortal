@model Employeeportal.Models.designation


@if (Model is null)
{
    <p style="font-size:40px;text-align:center">No Information Was Found With This DesignationID</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">DESIGNATION ID</label>
            <input type="text" class="form-control" asp-for="designationID" />
        </div>
        <div class="mt-3">
            <label class="form-label">NAME</label>
            <input type="text" class="form-control" asp-for="designationNAME" />
        </div>
        <div class="mt-3">
            <button type="Submit" class="btn btn-primary">Save</button>
            <button type="Submit" class="btn btn-danger ms-3" asp-controller="INFO" asp-action="DeleteDesignation">Delete</button>
        </div>
    </form>
}
