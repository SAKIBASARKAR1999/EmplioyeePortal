@model Employeeportal.Models.department


@if (Model is null)
{
    <p style="font-size:40px;text-align:center">No Information Was Found With This DepartmentID</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">DEPARTMENT ID</label>
            <input type="text" class="form-control" asp-for="departmentID" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">NAME</label>
            <input type="text" class="form-control" asp-for="departmentNAME" />
        </div>
        <div class="mt-3">
            <button type="Submit" class="btn btn-primary">Save</button>
            <button type="Submit" class="btn btn-danger ms-3" asp-controller="INFO" asp-action="DeleteDepartment">Delete</button>
        </div>
    </form>
}