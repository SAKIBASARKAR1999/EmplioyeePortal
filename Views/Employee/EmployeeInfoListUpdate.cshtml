            <h1 class="m-5" style="font-family:Georgia"><b>Employeeportal</b></h1>

            <nav>
                    <ul class="dropdown">
                    <a class="dropbtn" asp-area="" asp-controller="Employee" asp-action="EmployeeInfoEntry"><i class="fas fa-user icon" style="font-size:30px;color:darkviolet"></i><br/>Employee Data</a>
                        <div class="dropdown-content">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="EmployeeInfoListUpdate"><i class="fa-solid fa-users" style="font-size:30px;color:darkviolet"></i><br />Employee Information</a>
                        </div>
                    </ul>
            </nav>
</div> 
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <nav>
            <ul class="dropdown">
                <a class="dropbtn" asp-area="" asp-controller="INFO" asp-action="DesignationEntry">Designation</a>
                <div class="dropdown-content">
                    <a class="nav-link text-dark" asp-area="" asp-controller="INFO" asp-action="DesignationList">Designation Information</a>
                </div>
            </ul>
        </nav>
        <nav>
            <ul class="dropdown">
                <a class="dropbtn" asp-area="" asp-controller="INFO" asp-action="DepartmentEntry">Department</a>
                <div class="dropdown-content">
                    <a class="nav-link text-dark" asp-area="" asp-controller="INFO" asp-action="DepartmentList">Department Information</a>
                </div>
            </ul>
        </nav>
    </div>
</div>



@model List<Employeeportal.Models.employeeINFO>

<body style="background-color:plum">
<p style="font-size:36px;text-align:center; font-family:'Times New Roman', serif;" class=" m-4">EMPLOYEE INFORMATION </p>
<table class="table">
    <thead>
            <tr><th colspan="10" style="text-align:center;font-size:50px">EMPLOYEE INFORMATION</th></tr>
           
        
    </thead>
    <tbody>
            <tr>
                <th style="text-align:center">EMPLOYEE NAME</th>
                <th style="text-align:center">DATE OF BIRTH</th>
                <th style="text-align:center">GENDER</th>
                <th style="text-align:center">EMAIL</th>
                <th style="text-align:center">PHONE</th>
                <th style="text-align:center">EMERGENCY CONTRACT</th>
                <th style="text-align:center">ADDRESS</th> 
                <th style="text-align:center">DEPARTMENT</th>
                <th style="text-align:center">POSITION</th
                <th style="text-align:center"> </th>
                <th style="text-align:center"> </th>
                <th style="text-align:center"> </th>

            </tr>
           
        @foreach (var x in Model)
        {
            <tr>
                <td style="text-align:center">@x.FirstNAME @x.LastNAME</td>
                <td style="text-align:center">@x.DOB</td>
                <td style="text-align:center">@x.Gender</td>
                <td style="text-align:center">@x.Email</td>
                <td style="text-align:center">@x.Phone</td>
                <td style="text-align:center">@x.EmergencyContact</td>
                <td style="text-align:center">@x.Address</td>
                <td style="text-align:center">@x.departmentNAME</td>
                <td style="text-align:center">@x.Position</td>
                <td style="text-align:center"><a class="btn btn-primary" asp-controller="Employee" asp-action="EditEmployeeInfo" asp-route-id="@x.EmployeeID">EDIT</a></td>
                    <td style="text-align:center"><a class="btn btn-primary" asp-controller="Employee" asp-action="PersonalInfoList" asp-route-id="@x.EmployeeID">VIEW</a></td>
            </tr>
        }

    </tbody>
</table>
<br />
<br />



</body> 